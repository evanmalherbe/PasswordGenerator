        <button type="button" class="btn btn-primary btn-lg" onclick="saveWord()">Choose</button>
      </div>
    </div> *@
    <button type="submit" class="btn btn-success" id="generateButton">GENERATE</button>
      <div id="displayNewPassword" class="border rounded-3 p-2 mt-2" style="display: none">
      &nbsp;
    </div>
    </form>
  </div>

</div>

