@model PasswordGenerator.ViewModels.CreateViewModel
@{
    ViewData["Title"] = "Password Generator";
}

<div class="row">
  <p><strong>NOTE: </strong>Use the controls below to choose your password length and complexity, then hit 'Generate' to create a unique, secure password.</p>
  <div class="col-12 col-lg-6">

    <form id="optionsForm" method="post" asp-controller="Home" asp-action="Create">
    <div id="length-container" class="col-12 col-lg-6 mb-4 p-3 border rounded-3 bg-white">
      <label asp-for="Length" class="form-label fs-5">Choose password length:</label>
      <div class="input-group">
        <select asp-for="Length" class="form-select" aria-label="Password length">
          <option selected>Choose length</option>
          @for(int i = 8; i < 13; i++)
          {
            <option value="@i">@i</option>
          }
        </select>
        @* <input type="number" class="form-control form-control-lg" id="length-input" placeholder="Your word..." aria-label="Password length input">
        <button type="button" class="btn btn-primary btn-lg" onclick="saveWord()">Choose</button> *@
      </div>
    </div>

    <div id="complexity-container" class="mb-4 p-3 border rounded-3 bg-white">
      <h4 class="">Choose complexity options</h4>
        <div class="form-check">
          <input asp-for="SpecialChars" class="form-check-input" type="checkbox" id="specialChars">
          <label class="form-check-label" asp-for="SpecialChars">
            Special Chars
          </label>
        </div>
        <div class="form-check">
          <input asp-for="Numbers" class="form-check-input" type="checkbox" id="numbers">
          <label class="form-check-label" asp-for="Numbers">
            Numbers
          </label>
        </div>
        <div class="form-check">
          <input asp-for="UpperCase" class="form-check-input" type="checkbox" id="upperCase">
          <label class="form-check-label" asp-for="UpperCase">
            Uppercase letters
          </label>
        </div>
        <div class="form-check">
          <input asp-for="LowerCase" class="form-check-input" type="checkbox" id="lowerCase">
          <label class="form-check-label" asp-for="LowerCase">
            Lowercase letters
          </label>
        </div>
    </div>

   @*  <div id="controls-container" class="mb-4 p-3 border rounded-3 bg-white">
