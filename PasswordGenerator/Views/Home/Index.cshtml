@model PasswordGenerator.ViewModels.CreateViewModel
@{
    ViewData["Title"] = "Password Generator";
}

<div class="row justify-content-center mt-4">

  @* Controls Container - Wrapped in a Card for Visual Definition *@
  <div class="col-12 col-md-5 mb-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <h4 class="card-title text-primary mb-4">Password Generator Options</h4>

        <form id="optionsForm" method="post" asp-controller="Home" asp-action="Create">
          @* Validation errors/messages to user *@
          <div asp-validation-summary="ModelOnly" class="text-danger fw-bold mb-3 text-center" role="alert"></div>

          @* Length Section *@
          <div class="mb-4">
            <label asp-for="PasswordLength" class="form-label fs-5 fw-bold text-secondary">Password Length</label>
            <select asp-for="PasswordLength" class="form-select form-select-lg" aria-label="Password length" required>
              <option value="" selected>Select a length (Min 8, Max 20)</option>
              @for (int i = 20; i > 7; i--)
              {
                <option value="@i">@i Characters</option>
              }
            </select>
            <span asp-validation-for="PasswordLength" class="text-danger small mt-1 d-block"></span>
          </div>

          @* Complexity Section *@
          <div class="mb-4 pt-3 border-top">
            <label class="form-label fs-5 fw-bold text-secondary mb-3">Character Types (Complexity)</label>
            <div class="row">
              <div class="col-6">
                <div class="form-check">
                  <input asp-for="SpecialChars" class="form-check-input" type="checkbox" id="specialChars">
                  <label class="form-check-label" asp-for="SpecialChars">Special Characters</label>
                </div>
                <div class="form-check">
                  <input asp-for="Numbers" class="form-check-input" type="checkbox" id="numbers">
                  <label class="form-check-label" asp-for="Numbers">Numbers (0-9)</label>
                </div>
              </div>
              <div class="col-6">
                <div class="form-check">
                  <input asp-for="UpperCase" class="form-check-input" type="checkbox" id="upperCase">
                  <label class="form-check-label" asp-for="UpperCase">Uppercase (A-Z)</label>
                </div>
                <div class="form-check">
                  <input asp-for="LowerCase" class="form-check-input" type="checkbox" id="lowerCase">
                  <label class="form-check-label" asp-for="LowerCase">Lowercase (a-z)</label>
                </div>
              </div>
            </div>
          </div>

          @* Generate Button *@
          <div class="d-grid gap-2 pt-3">
            <button type="submit" class="btn btn-success btn-lg" id="generateButton">
              <i class="bi bi-key-fill me-2"></i> GENERATE PASSWORD
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  @* User Guidelines Container - Wrapped in a Card *@
  <div class="col-12 col-md-5 mb-4">
    <div class="card shadow-sm bg-light h-100 border-0">
      <div class="card-body">
        <h4 class="card-title text-info mb-3">🔒 Security Guidelines</h4>
        <ul class="list-group list-group-flush">
          <li class="list-group-item bg-light border-0">Use the control panel to the left to define your criteria, then hit the **Generate Password** button.</li>
          <li class="list-group-item bg-light border-0">The **National Institute of Standards and Technology** (NIST) strongly recommends prioritizing **password length** over complexity (mix of character types) for maximum security.</li>
          <li class="list-group-item bg-light border-0">
            <p class="mb-0">🔑 **Recommended Length:**</p>
            <p class="fw-bold text-success">At least 8, but ideally 15 or more characters.</p>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

